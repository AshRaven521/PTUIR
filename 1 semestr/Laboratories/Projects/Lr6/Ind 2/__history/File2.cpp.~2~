  char* symboldelete(char *str, int n, int length)
{
  char *s;

  s = new char[strlen(str)-n];
  int j = 0;
  for (int i =n; i<strlen(str); i++)
  {
	s[j] = str[i];
	j++;
  }
  s[j] = '\0';
  return(s);
}
