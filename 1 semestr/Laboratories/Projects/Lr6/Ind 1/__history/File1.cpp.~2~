char* substr(char *, int, int);

int _tmain(int argc, _TCHAR* argv[])
{
  int b=0;
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
 char string[80];
  cout<<"Введите элементы строки:";
  cin>>string;
	   cout<<"Элементы строки: "<<string;
 char * sf = strchr(string, '.');
   //cout<<"\n: "<<sf;
	 int a=(sf-string)+1;
	 int c=strlen(sf);
	   cout<<"\nПоложение:"<<a<<endl;
		  for(int i=a;i>=0;i--)
			{
				if(isdigit(string[i]))
				  b++;
			}
	char *t;
  t = substr(string, a-b, c+b);
  double nN=atof(t);
  cout<<"Число с плавающей запятой: "<<nN;

	getch();
	return 0;
}

char* substr(char *str, int start, int length)
{
  char *s;

  s = new char[length+1];
  int j = 0;
  for (int i = start; i<length; i++)
  {
	s[j] = str[i];
	j++;
  }
  s[j] = '\0';
  return(s);
}
