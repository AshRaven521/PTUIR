char* substr(char *, int, int);

int _tmain(int argc, _TCHAR* argv[])
{
  int b=0;
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
 char string[80];
  cout<<"Введите элементы строки:";
  cin>>string;
	   cout<<"Элементы строки: "<<string;
 char * sf = strchr(string, '.');
   //cout<<"\n: "<<sf;
	 int a=(sf-string)+1;
	 int c=strlen(sf);
	   cout<<"\nПоложение:"<<a<<endl;
		  for(int i=a;i>=0;i--)
			{
				if(isdigit(string[i]))
				  b++;
			}
	char *t;
  t = substr(string, a-b, c+b);
  double nN=atof(t);
  cout<<"Число с плавающей запятой: "<<nN;

	getch();
	return 0;
}

char* substr(char *str, int start, int length = 0)
{
  char *s;
  int len = 0;
  for (int i = 0; str[i] != '\0'; i++)
	len++;
  if (length > 0)
  {
	if (start + length < len)
	  len = start + length;
  }
  else
	len = len + length;
  int nlen = 0;
  nlen=len-start+1;
  s = new char[nlen];
  int j = 0;
  for (int i = start; i<len; i++)
  {
	s[j] = str[i]; j++;
  }
  s[j] = '\0';
  return(s);
}
