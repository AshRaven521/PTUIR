  char *perevodvobr(char *aA)
	{
		char c[11]="0,00000000\0";
		int i=0;
		int j=2;
		  while(aA[i]!='\0')
			{
			   if(aA[0]=='-')
				 {
					c[0]='1';
					if(i>0)
					{
						if(aA[i]=='0')
						{
							 c[j]='1';
						 }
						else
						  {
							  c[j]='0';
						  }
						j++;
					}
				 }
			   else
				 {
				   c[j]=aA[i];
				   j++;
				 }
				i++;
			}
		return c;
	}

	char *slozhenie(char *x,char *y)
	  {
		char result[11]="0,00000000\0";
		  for(int i=9;i>=2;i--)
			{
				if((x[i]=='1' && y[i]=='0') || (x[i]=='0' && y[i]=='1'))
				  {
					if(result[i]=='1')
					  {
						  result[i]='0';
						  result[i-1]='1';
					  }
					  else
					  {
						result[i]='1';
					  }
				  }


				if(x[i]=='0' && y[i]=='0')
				  {
					if(result[i]!='1')
					  result[i]='0';
				  }
				if(x[i]=='1' && y[i]=='1')
				  {
					if(result[i]!='1')
					  {
					  result[i]='0';
					  result[i-1]='1';
					  }
					else
					  {
						result[i]='1';
						result[i-1]='1';
					  }
				  }
			}
		  return result;
	  }
