}
  char* perevodvobr(char *aA)
	{
		char c[9]="00000000\0";
		int i=0;
		int j=1;
		int k=0;
		char df[9]="00000000\0";
		while(aA[i]!='\0' && i<8)
		{
			if(aA[i]!='-')
				k++;
			i++;
		}
		k=k-1;
		for(j=7;j>=0;j--)
		{
			if(k>=0)
			{
				df[j]=aA[k];
				if(aA[k]=='-')
					df[0]='-';
				else
					df[0]='+';
				k--;
			}
		}
		i=0;
		j=1;
		  while(df[i]!='\0')
			{
			   if(df[0]=='-')
				 {
					c[0]='1';
					if(i>0)
					{
						if(df[i]=='0')
							c[j]='1';
						else
							c[j]='0';
						j++;
					}
				 }
			   else
				 {
					if(i>0)
					{
						c[j]=df[i];
						j++;
					}
				 }
				i++;
			}
		return c;
	}

	char *slozhenie(char *x,char *y)
	  {
		char result[9]="00000000\0";
		  for(int i=7;i>=0;i--)
			{
				if((x[i]=='1' && y[i]=='0') || (x[i]=='0' && y[i]=='1'))
				  {
					if(result[i]=='1')
					  {
						  result[i]='0';
						  if(i>0)
							result[i-1]='1';
					  }
					  else
					  {
						result[i]='1';
					  }
				  }


				if(x[i]=='0' && y[i]=='0')
				  {
					if(result[i]!='1')
					  result[i]='0';
				  }
				if(x[i]=='1' && y[i]=='1')
				  {
					if(result[i]!='1')
					  {
					  result[i]='0';
					  if(i>0)
						result[i-1]='1';
					  }
					else
					  {
						result[i]='1';
						if(i>0)
							result[i-1]='1';
					  }
				  }
			}
		  //if(result[2]=='1')
		  //	result[0]='1';
		  return result;
	  }
