char* perevodvobr(char *);
char *slozhenie(char *,char *);
int _tmain(int argc, _TCHAR* argv[])
{
  char a[9];
  char b[9];
  char *vyzov1;
  char *vyzov2;
  char *vyzov3;
  char sd[9];
  char sf[9];
SetConsoleCP(1251);
SetConsoleOutputCP(1251);
  cout<<"¬ведите первое двоичное число,заданное в естественной форме : ";
  cin>>a;
  cout<<"¬ведите второе двоичное число,заданное в естественной форме : ";
  cin>>b;
	vyzov1=perevodvobr(a);
	for(int i=0;i<9;i++)
		sd[i]=vyzov1[i];
	vyzov2=perevodvobr(b);
    for(int i=0;i<9;i++)
		sf[i]=vyzov2[i];
	vyzov3=slozhenie(sd,sf);
	for(int i=0;i<9;i++)
		sd[i]=vyzov3[i];
	cout<<"\n–езультат сложени€ в обратном коде :"<<sd<<endl;
	if(sd[0]=='1')
	{
		vyzov3=slozhenie(sd,"00000001\0");
        for(int i=0;i<9;i++)
			sd[i]=vyzov3[i];
	}
	cout<<"\n–езультат сложени€ в дополнительном коде :"<<sd<<endl;
	getch();
