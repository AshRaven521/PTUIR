  char* symboldelete(char *str, int n)
{
  char *s;

  s = new char[strlen(str)-n];
  int j = 0;
  int k=strlen(str);
  for (int i =n; i<k; i++)
  {
	s[j] = str[i];
	j++;
  }
  s[j] = '\0';
  return(s);
}
