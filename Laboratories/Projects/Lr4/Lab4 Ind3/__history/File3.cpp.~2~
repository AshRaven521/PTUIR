//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include <tchar.h>
#include <math.h>
#include <iostream.h>
#include <conio.h>
#include <windows.h>
//---------------------------------------------------------------------------

#pragma argsused
int _tmain(int argc, _TCHAR* argv[])
{
  SetConsoleCP(1251);
  SetConsoleOutputCP(1251);
   const int N=3;
	int **mas = new int *[N];
	 int s,i1,i2,array[N][N],bo;

for (int i = 0; i < N; i++)
{
  mas[i] = new int [N];
}


	  for(i1=0;i1<N;i1++)
	{
		 for(i2=0;i2<N;i2++)
		 {
				s=0;
				int i;
				for(i=0;i<N;i++)
						s+=array[i1][i]*array[i2][i];
				if( i1!=i2 && s!=0 || i1==i2 && s!=1.0)
				{
				  //????????????????
						bo=1;
						break;
				}
		 }
	}
	if(bo)
	   cout<<"Удовлетворяет";
	else
	   cout<<"Не удовлетворяет";







for (int i = 0; i < N; i++) {
  delete []mas[i];
}
delete []mas;
	getch();
	return 0;
}
