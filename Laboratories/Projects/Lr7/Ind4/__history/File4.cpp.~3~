char *sum(char*,char*);
char *sub(char*,char*);
int perevodvint(char);
char *sameznach(char*);
char perevodvchar(int);
int sravnenie(char *,char *);
int _tmain(int argc, _TCHAR* argv[])
{
//сделать проверку в сложении на ввод числа с -;
