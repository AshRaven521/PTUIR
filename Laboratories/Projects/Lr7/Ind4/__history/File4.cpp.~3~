  dec=sameznach(y1);
  for(int f=0;f<9;f++)
	x1[f]=dec[f];
  bec=sameznach(y2);
  for(int f=0;f<9;f++)
	x2[f]=bec[f];
	sumR=sum(x1,x2);
	int k=0;
