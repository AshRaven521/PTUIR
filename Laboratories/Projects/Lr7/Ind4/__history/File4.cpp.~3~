char str1[9];
char str2[9];
char *dec;
char *bec;
char x1[9],x2[9],x3[9];
char* sumR;
char* subR;
char y1[9],y2[9];
int bigg;
cout<<"Введите первое число в двенадцатеричной системе счисления :";
cin>>str1;
cout<<"Введите второе число в двенадцатеричной системе счисления :";
cin>>str2;
  bigg=sravnenie(str1,str2);
	if(bigg==0 || bigg==2)
	  {
		int i=0;
		  while(str1[i]!='\0')
			{
			   y1[i]=str1[i];
			   i++;
			}
		int j=0;
		  while(str2[j]!='\0')
			{
				y2[j]=str2[j];
				j++;
			}
	  }
	if(bigg==1)
	  {
		int i=0;
		  while(str1[i]!='\0')
			{
			   y1[i]=str2[i];
			   i++;
			}
		int j=0;
		  while(str2[j]!='\0')
			{
				y2[j]=str1[j];
				j++;
