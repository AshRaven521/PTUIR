  char *sum(char str1x[9],char str2y[9])
	{
		char result[9]="00000000\0";
		for(int i=7;i>0;i--)
		  {
			  int a=perevodvint(str1x[i]);
			  int b=perevodvint(str2y[i]);
			  int r=a+b;
				if(result[i]=='1')
				  {
					  r=r+1;
				  }
				if(r>=12)
				  {
					r=r-12;
					result[i-1]='1';
				  }
			  result[i]=perevodvchar(r);
		  }
	  return result;
	}
  int perevodvint(char x)
	{
		int a=0;
		switch(x)
		  {
			  case 'A': a=10;break;
			  case 'B': a=11;break;
			  default : a=x-'0';break;
		  }
		return a;
	}

	char *sameznach(char strx[9])
	  {
	   char str1n[9]="00000000\0";
	   int i=0;
		while(strx[i]!='\0')
		  {
			  i++;
		  }
		   int	k=i-1;
		   for(int j=7;j>0;j--)
			 {
			   if(k>=0)
				  {
					str1n[j]=strx[k];
				  }
				k--;
			 }
		 return str1n;
	  }

	  char  perevodvchar(int rR)
	{
		char b;
		switch(rR)
		  {
			  case 10: b='A';break;
			  case 11: b='B';break;
			  default : b=rR+'0';break;
		  }
		return b;
	}

	  char *sub(char str1x[9],char str2y[9])
		{
		   char result[9]="00000000\0";
			 for(int i=7;i>0;i--)
			   {
				 int a=perevodvint(str1x[i]);
				 int b=perevodvint(str2y[i]);
				 int r=a-b;
				   if(result[i]=='9')
					 {
					   r=r-1;
					 }
				   if(r<0)
					 {
					   r=r+12;
					   result[i-1]='9';
					 }
				 result[i]=perevodvchar(r);
			   }
			return result;
		}
